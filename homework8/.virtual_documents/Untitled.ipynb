from astropy.io import fits 
import matplotlib.pyplot as plt


with fits.open("data.fits") as hdul:
    header = hdul[0].header #accessing meta data info
    data = hdul[0].data

plt.imshow(data, cmap="plasma")


#images are usually plotted on a logarithmic scale
from matplotlib.pyplot import LogNorm
plt.imshow(data, cmap = "grey", norm=LogNorm())
plt.colorbar()
plt.show()


