from astropy import units as u


#variable = distance
#value = 1e5, 100,000
#unit = u.mkk
distance = 1e5 * u.km
velocity = 20 * u.km/ u.s


print(distance)
velocity


print(distance.value) #get back just the value
print(distance.unit) #gets back the unit only


time = distance/velocity
time


time_hour = time.to(u.hour)
time_hour


distance_au = distance.to(u.AU)
print(distance_au)
velocity_ms = velocity.to(u.m/u.s)
print(velocity_ms)
time_min = time.to(u.min)
print(time_min)


#print(velocity + distance)
#gives you an error


travel_time = (500* u.km) / (100 * u.m/ u.s)
print(travel_time)
print(travel_time.unit)
travel_time = travel_time.to(u.s)
travel_time = travel_time.to(u.hour)
print(travel_time)


