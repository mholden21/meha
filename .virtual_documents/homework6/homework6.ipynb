def prime(num):
    if num < 2:
        return False
    for i in range(2, int(num**0.5) + 1):
        if num % i == 0:
            return False
    else:
        return True

def prime_rows(arr):
    primes = np.vectorize(prime)(arr)
    rows = np.any(primes, axis = 1)
    print(arr[rows])

prime_rows(arr3)



